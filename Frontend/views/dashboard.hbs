{{>sidebar_admin user}}
<div class="main-panel">
    <!-- Navbar -->
    {{>header_admin}}
    <!-- End Navbar -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary card-header-icon">
                            <div class="card-icon">
                                <a href="#" data-toggle="modal" data-target="#modalEditProduct">
                                    <i class="material-icons" style="color: #fff;">add</i>
                                </a>
                            </div>
                            <h4 class="card-title" style="font-size: 29px; font-weight: 600;">Sản phẩm

                            </h4>

                        </div>
                        <div class="card-body">
                            <div class="toolbar">
                            </div>
                            <div class="material-datatables">
                                <table id="datatables" class="table table-striped table-no-bordered table-hover"
                                    cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>code</th>
                                            <th>Tên</th>
                                            <th>Sản xuất</th>
                                            <th>Giá</th>
                                            <th>Phòng ngừa</th>
                                            <th>Tình trạng</th>
                                            <th class="disabled-sorting text-right"></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th class="disabled-sorting">code</th>
                                            <th>Tên</th>
                                            <th>Sản xuất</th>
                                            <th>Giá</th>
                                            <th>Phòng ngừa</th>
                                            <th>Tình trạng</th>
                                            <th class="text-right"></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <td>{{this.code}}</td>
                                            <td>
                                                <div class="fix-text">{{this.name}}</div>
                                            </td>
                                            <td>{{this.manufacturer}}</td>
                                            <td>{{formatMoney this.price}}</td>
                                            <td>
                                                <div class="fix-text">{{this.prevention}}</div>
                                            </td>

                                            <td>{{this.statusName}}</td>
                                            <td class="text-right">
                                                <a href="#" class="btn btn-link btn-warning btn-just-icon edit"
                                                    data-toggle="modal" data-target="#modalEditProduct"
                                                    data-whatever="{{this.code}}"><i class="material-icons">dvr</i></a>
                                                <a href="#" class="btn btn-link btn-danger btn-just-icon remove"><i
                                                        class="material-icons">close</i></a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- end content-->
                    </div>
                    <!--  end card  -->
                </div>
                <!-- end col-md-12 -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>

<!-- Classic Modal -->
<div class="modal fade modal-xl" id="modalEditProduct" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" style="max-width: 960px;">
        <div class="modal-content modal-xl">
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form id="TypeValidation" class="form-horizontal" action="/admin/product/update" method="post">
                            <div class="card-header card-header-rose card-header-text">
                                <div class="card-text">
                                    <h4 class="card-title">Thôn tin sản phẩm</h4>
                                </div>
                            </div>
                            <div class="card-body ">
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Mã Sản phẩm</label>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="form-control" id="code" type="text" name="code"
                                                required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Tên sản phẩm</label>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="form-control" id="name" type="text" name="name"
                                                required="true" />
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <label for="type" class="col-sm-2 col-form-label">Loại vaccine</label>
                                    <select class="form-control col-sm-4" id="type" name="type"
                                        style="padding: 0 15px;">
                                        {{#each categories}}
                                        <option value="{{value}}">{{label}}</option>
                                        {{/each}}
                                    </select>

                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Phòng ngừa</label>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="form-control" id="prevention" type="text" name="prevention"
                                                required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Nhà sản xuất</label>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="form-control" id="manufacturer" type="text"
                                                name="manufacturer" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Giá</label>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="form-control" type="text" id="price" name="price"
                                                number="true" required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-2 col-form-label">Số lượng</label>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <input class="form-control" type="text" id="order" name="order"
                                                number="true" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Mô tả</label>
                                    <div class="col-sm-10">
                                        <textarea id="description" name="description" rows="3"
                                            style="width: 100%;"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Url hình ảnh</label>
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input class="form-control" id="photo" type="text" name="photo"
                                                url="true.html" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <input id="_id" name="_id" hidden />

                                </div>
                                <div class="row">
                                    <div class="col-sm-10 show-image"></div>
                                </div>
                                <div class="card-footer ml-auto mr-auto">
                                    <button type="submit" class="btn btn-rose">Validate Inputs</button>
                                </div>

                        </form>

                    </div>
                </div>
                <!-- end card -->
            </div>

        </div>
    </div>
</div>
<!--  End Modal -->

