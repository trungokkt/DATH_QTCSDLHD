<script>
    $(document).ready(function () {
        $('#datatables').DataTable({
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 20, 50, -1],
                [10, 20, 50, "All"]
            ],
            responsive: true,
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search records",
            },
        });
        var table = $('#datatables').DataTable();

        
        // Edit record

        // Delete a record
        table.on('click', '.remove', function (e) {
            $tr = $(this).closest('tr');
            table.row($tr).remove().draw();
            e.preventDefault();
        });

        //Like record
        table.on('click', '.like', function () {
            alert('You clicked on Like button');
        });
     
    });
</script>
<script>
    function setFormValidation(id) {
        $(id).validate({
            highlight: function (element) {
                $(element).closest('.form-group').removeClass('has-success').addClass('has-danger');
                $(element).closest('.form-check').removeClass('has-success').addClass('has-danger');
            },
            success: function (element) {
                $(element).closest('.form-group').removeClass('has-danger').addClass('has-success');
                $(element).closest('.form-check').removeClass('has-danger').addClass('has-success');
            },
            errorPlacement: function (error, element) {
                $(element).closest('.form-group').append(error);
            },
        });
    }
    $(document).ready(function () {
        setFormValidation('#RegisterValidation');
        setFormValidation('#TypeValidation');
        setFormValidation('#LoginValidation');
        setFormValidation('#RangeValidation');
    });
</script>
<script>
    const selectElement = document.querySelector('#photo');
    selectElement.addEventListener('change', (event) => {
        const result = document.querySelector('.show-image');
        result.innerHTML = `<img src="${event.target.value}" style="max-width:200px">`
    });
</script>
<script>
    var editor
    $('#modalEditProduct').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        const photoSelector = document.querySelector('.show-image');
        if (!recipient) {
            $('#TypeValidation').attr("method", "post")
            $('#TypeValidation').attr("action", "/admin/product")
            editor = new FroalaEditor('#description')

        } else {
            $('#TypeValidation').attr("method", "post")
            $('#TypeValidation').attr("action", "/admin/product/update")
            $.ajax({
                url: "http://localhost:8000/vaccines/code?code=" + recipient,
                method: "get",
                success: function (res) {
                    console.log(res)
                    modal.find('.modal-body #_id').val(res._id)
                    modal.find('.modal-body #code').val(res.code)
                    modal.find('.modal-body #name').val(res.name)
                    modal.find('.modal-body #manufacturer').val(res.manufacturer)
                    modal.find('.modal-body #prevention').val(res.prevention)
                    modal.find('.modal-body #price').val(res.price)
                    modal.find('.modal-body #order').val(res.order)
                    modal.find('.modal-body #description').val(res.description)
                    modal.find('.modal-body #photo').val(res.photo)
                    modal.find('.modal-body #type').val(res.types[0])
                    photoSelector.innerHTML = `<img src="${res.photo}" style="max-width:200px">`
                    editor = new FroalaEditor('#description')

                }
            })
        }
    })
    $('#modalEditProduct').on('hide.bs.modal', function (event) {
        var modal = $(this)
        const photoSelector = document.querySelector('.show-image');

        if (editor) {
            editor.destroy()
            modal.find('.modal-body #_id').val('')
            modal.find('.modal-body #code').val('')
            modal.find('.modal-body #name').val('')
            modal.find('.modal-body #manufacturer').val('')
            modal.find('.modal-body #prevention').val('')
            modal.find('.modal-body #price').val('')
            modal.find('.modal-body #order').val('')
            modal.find('.modal-body #description').val('')
            modal.find('.modal-body #photo').val('')
            modal.find('.modal-body #type').val('')
            photoSelector.innerHTML = ``
        }
    });


</script>
<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>